<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/commonHead.ejs', title) %>
</head>

<body class="">
    <div class="container-fluid">
        <div class="row">
            <div class="col"></div>
            <div class="col-sm-8 col-md-6 col-lg-4">
                <div class="form-card mt-5">
                    <form>
                        <h2 class="courgette text-center">Login</h2>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username:</label>
                            <input type="text" class="form-control" id="username" placeholder="Username" name="username">
                        </div>
                        <div class="mb-5">
                            <label for="password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="password" placeholder="Password" name="password">
                        </div>
                        <div class="mb-3">
                            <button id="login-btn" type="button" class="form-control btn btn-primary">Login</button>
                        </div>
                        <div class="mb-3 text-center">
                            <span>Don't have any account? </span><a class="decoration-not" href="/signup">Signup</a>
                        </div>
                        <p id="loginNecessary" class="text-center dangerText">All inputs are necessary.</p>
                        <p id="loginErrorText" class="text-center dangerText"></p>
                    </form>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>
    <%- include('../partials/commonScripts.ejs') %>
        <script src="/public/js/login.js"></script>
</body>

</html>