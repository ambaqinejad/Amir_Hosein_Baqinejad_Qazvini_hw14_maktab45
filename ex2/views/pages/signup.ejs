<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/commonHead.ejs', title) %>
</head>

<body class="">
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="row">
                <div class="col"></div>
                <div class="col-sm-8 col-md-6 col-lg-4">
                    <div class="form-card mt-5">
                        <form>
                            <h2 class="courgette text-center">Signup</h2>
                            <div class="mb-3">
                                <label for="username" class="form-label">Username:</label>
                                <input type="text" class="form-control" id="username" placeholder="Username" name="username">
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password:</label>
                                <input type="password" class="form-control" id="password" placeholder="Password" name="password">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email:</label>
                                <input type="email" class="form-control" id="email" placeholder="Email" name="email">
                            </div>
                            <div class="mb-5">
                                <label class="form-label">Gender:</label>
                                <div id="radio-gender">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gender" id="male" value="male" checked>
                                        <label class="form-check-label" for="male">
                                          Male
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gender" id="female" value="female">
                                        <label class="form-check-label" for="female">
                                          Female
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <button id="signup-btn" type="button" class="form-control btn btn-primary">Signup</button>
                            </div>
                            <p id="signupNecessary" class="text-center dangerText">All inputs are necessary.</p>
                            <p id="errorText" class="text-center dangerText"></p>
                        </form>
                    </div>
                </div>
                <div class="col"></div>
            </div>
        </div>
    </div>
    <%- include('../partials/commonScripts.ejs') %>
        <script src="/public/js/signup.js"></script>
</body>

</html>